{
  "name": "labelix",
  "productName": "Labelix",
  "version": "1.0.5",
  "main": "main.js",
  "description": "약국 전문 라벨 출력 솔루션 - PM 프로그램 연동 약품 라벨 자동화 시스템",
  "author": {
    "name": "CleaReach System",
    "email": "cleareach@naver.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://blog.naver.com/cleareach",
  "bugs": {
    "url": "https://blog.naver.com/cleareach",
    "email": "cleareach@naver.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "pnpm exec electron-rebuild -f -w better-sqlite3-multiple-ciphers",
    "compile": "node compile.js",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64 --ia32",
    "dist:secure": "pnpm run compile && electron-builder"
  },
  "keywords": [
    "labelix",
    "pharmacy",
    "label-printer",
    "prescription",
    "medication",
    "healthcare",
    "automation",
    "brother-printer",
    "clearreach"
  ],
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3-multiple-ciphers": "^12.4.1",
    "bytenode": "^1.5.7",
    "chokidar": "^4.0.3",
    "firebase": "^12.5.0",
    "iconv-lite": "^0.6.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "rcedit": "^4.0.1",
    "tsx": "^4.20.6"
  },
  "build": {
    "appId": "com.clearreach.labelix",
    "productName": "Labelix",
    "copyright": "Copyright © 2024 CleaReach System",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "afterPack": "./scripts/afterPack.js",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.md",
      "!dist",
      "!originFiles/**",
      "!scripts/archive/**",
      "!license-generator/**",
      "!*-original.js",
      "!compile.js",
      "**/*.jsc"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates",
        "filter": [
          "*.lbx"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [],
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Labelix",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  }
}
